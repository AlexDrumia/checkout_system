<h1>Basket Items</h1>

<table>
	<thead>
		<tr>
			<th>Item</th>
			<th>Price</th>
			<th>Quantity:</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @basket.items.each do |item| %> 
			<tr>
				<td><%= item.name %></td>
				<td><%= item.price %></td>
				<td><%= button_to "Remove item", remove_item_url(item), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

